<GraphConfiguration>
	<TSVInputDirectory>./results/</TSVInputDirectory>
    <GraphOutputDirectory>./results/graph/</GraphOutputDirectory>

    <GraphWidth>800</GraphWidth>
    <GraphHeight>600</GraphHeight>

    <RaceProgressGraphMinValue>100</RaceProgressGraphMinValue>
	<RaceProgressGraphTitle>Race time progress</RaceProgressGraphTitle>
	<RaceProgressGraphXAxisLabel>Lap</RaceProgressGraphXAxisLabel>
	<RaceProgressGraphYAxisLabel>Gap, seconds</RaceProgressGraphYAxisLabel>

	<LapByLapGraphTitle>Lap by lap positions</LapByLapGraphTitle>
	<LapByLapGraphXAxisLabel>Lap</LapByLapGraphXAxisLabel>
	<LapByLapGraphYAxisLabel>Position</LapByLapGraphYAxisLabel>
	<LapByLapGraphDisplayPositions>true</LapByLapGraphDisplayPositions>

	<OutputLapTimes>true</OutputLapTimes>
	<LimitLapTimes>true</LimitLapTimes>
	<LimitMultiplier>1,5</LimitMultiplier>
	<LimitToGlobalBestLap>true</LimitToGlobalBestLap>
</GraphConfiguration>
